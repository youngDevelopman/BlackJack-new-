@model IEnumerable<BlackJack.BLL.ViewModels.PlayerViewModel>
@{
  ViewBag.Title = "GameSession";
}
<h2>Black Jack</h2>

<div id="playerTable">
  @Html.Partial("_PlayersTable", Model)
</div>

@using (Ajax.BeginForm("DrawCard", new AjaxOptions { UpdateTargetId = "playerTable", }))
{
  <input type="submit" value="Stand" />
}

@using (Html.BeginForm("Hit", "Home"))
{
  <input type="submit" value="Hit" />
}

<script>
  alert("Round has started")
</script>

@Scripts.Render("~/scripts/jquery-3.3.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")